        "class Student:\n",
        "    def __init__(self, name, age, grade):\n",
        "        self.name = name\n",
        "        self.age = age\n",
        "        self.grade = grade\n",
        "\n",
        "    def greet(self):\n",
        "        print(f\"Hello, my name is {self.name} and I am {self.age} years old. My grade is {self.grade}\")\n",
        "    def is_passed(self):\n",
        "        return self.grade >= 50\n",
        "\n",
        "s3 = Student(\"Charlie\", 19, 72)\n",
        "\n",
